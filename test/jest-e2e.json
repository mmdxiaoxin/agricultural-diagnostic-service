{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@app/file-operation": "<rootDir>/../libs/file-operation/src",
    "@app/file-operation/(.*)": "<rootDir>/../libs/file-operation/src/$1",
    "@app/mail": "<rootDir>/../libs/mail/src",
    "@app/mail/(.*)": "<rootDir>/../libs/mail/src/$1",
    "@app/metrics": "<rootDir>/../libs/metrics/src",
    "@app/metrics/(.*)": "<rootDir>/../libs/metrics/src/$1"
  }
}