{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@app/ali-oss": ["libs/ali-oss/src"],
      "@app/ali-oss/*": ["libs/ali-oss/src/*"],
      "@app/database": ["libs/database/src"],
      "@app/database/*": ["libs/database/src/*"],
      "@app/file-operation": ["libs/file-operation/src"],
      "@app/file-operation/*": ["libs/file-operation/src/*"],
      "@app/mail": ["libs/mail/src"],
      "@app/mail/*": ["libs/mail/src/*"],
      "@app/redis": ["libs/redis/src"],
      "@app/redis/*": ["libs/redis/src/*"],
      "@common/*": ["libs/common/src/*"],
      "@shared/*": ["libs/shared/src/*"]
    }
  }
}
